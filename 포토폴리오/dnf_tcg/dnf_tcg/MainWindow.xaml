<Window x:Class="dnf_tcg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DNF TCG" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="487*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">
            <!-- 👇 여기 선언 -->
            <TextBlock x:Name="StatusText" FontSize="16" Margin="0 0 0 10"/>

            <!-- 👇 카드 버튼들 배치될 영역 -->
            <WrapPanel x:Name="HandPanel" Margin="0 0 0 10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="레벨업" Width="100" Margin="5" Click="LevelUp_Click"/>
                <Button Content="턴 넘기기" Width="100" Margin="5" Click="EndTurn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
